<!DOCTYPE html>
<html>
  <head>
    <%= partial 'partials/head' %>
  </head>
  <body>
    <%= partial 'partials/mobilenav' %>
    <%= partial 'partials/widenav', :locals => { nav_class: "sub" } %>

    <main class="container">
      <div class="row">
        <aside class="column">
          <ul class="read-more">
            <% current_page.data.sidebar.each_with_index do |link, index| %>
            <li><%= link_to "#{index+1}. #{link.text}", link.href %></li>
            <% end %>
          </ul>
        </aside>
        <div class="column column-75 main-content">
          <%= yield %>
        </div>
      </div>
    </main>

    <%= partial 'partials/footer' %>
  </body>
  <%= javascript_include_tag :site %>
</html>
