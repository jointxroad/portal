<div class="column">
  <h4><a href="events.html">Events</a></h4>
  <% data.events.select{|event| Date.parse(event.date) >= Date.today}.each do |event| %>
  <div onclick="document.location.href=&quot;<%= event.link %>&quot;" class="card">
    <div class="card-header"><b><%= Date.parse(event.date).strftime('%d.%m.%Y') %></b><small><%= event.location %></small></div>
    <div class="card-content">
      <p><%= event.title %></p>
      <p><%= event.information %></p>
      <%= image_tag event.image %>
    </div>
  </div>
  <% end %>
</div>
