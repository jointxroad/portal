<main>
  <div class="container">
    <h1 class="center">Blog</h1>
    <div class="row">
      <% blog.articles[0...5].each do |article| %>
      <div class="column">
        <div onclick="document.location.href=&quot;<%= article.url %>&quot;" class="card">
          <div class="card-header"><b><%= article.data.author %></b><small><%= article.date.strftime('%d.%m.%Y') %></small></div>
          <div class="card-content">
            <p><%= article.title %></p><img src="<%= article.data.image %>"/>
          </div>
        </div>
      </div>
      <% end %>
      <div class="column">
      </div>
      <div class="column">
      </div>
    </div>
  </div>
</main>
